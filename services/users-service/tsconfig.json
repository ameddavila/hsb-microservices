{
    "compilerOptions": {
      "target": "ES2021",
      "module": "CommonJS",
      "outDir": "dist",
      "rootDir": "src",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "baseUrl": "./src",
      "paths": {
        "@/*": ["*"],
        "@config/*": ["config/*"],
        "@models/*": ["models/*"],
        "@services/*": ["services/*"],
        "@controllers/*": ["controllers/*"],
        "@routes/*": ["routes/*"],
        "@validators/*": ["validators/*"],
        "@middlewares/*": ["middlewares/*"],
        "@utils/*": ["utils/*"]
      },
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  